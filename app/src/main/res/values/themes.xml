<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CataCata" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->

        <!-- Para alterar o menu pop-up e a cor do texto do aplicativo  -->
        <item name="android:textColor">@color/black</item>

        <!-- Para alterar o plano de fundo do menu de opções -->
        <item name="android:itemBackground">#AECCCB</item>
    </style>

    <style name="Toolbar" parent="Theme.Material3.Light.NoActionBar" >
        <item name="android:textColorSecondary">@color/verdeIcons</item>
    </style>

    <style name="Theme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/catacata_vetor</item>
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="postSplashScreenTheme">@style/Theme.CataCata</item>
    </style>

    <style name="Theme.MaterialAlternativo" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/verdeIcons</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="BottonNavigationStyle" parent="Theme.Material3.Light">

        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
        <item name="colorPrimary">@color/verdeIcons</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>

    <style name="GreenProgressBar">
        <item name="android:indeterminateTint">@color/verdeIcons</item>
    </style>

</resources>